@model stock_management_system.Models.M_SystemSettingModel
@{ Layout = null; }

<head>
    <style>
    </style>
</head>

<!-- Modal -->
<div class="modal fade" id="editsystemsettingmanagament" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title w-100 text-center position-absolute font-weight-bold">修正</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>             <!--Modal Header End-->
            <div class="modal-body">
                <form method="post" asp-controller="M_SystemSetting" asp-action="Edit" enctype="multipart/form-data" autocomplete="on"
                      data-ajax="true" data-ajax-update="formDetails">
                    @Html.AntiForgeryToken()
                    <span class="text-danger">@ViewData["Error"] </span>
                    <div class="modal-body m">
                        <div class="form-group">
                            <label>設定コード</label>
                            <input asp-for="@Model.SystemSettingCode" name="SystemSettingCode" class="form-control" id="SystemSettingCodeEdit" type="text" readonly />
                        </div>
                        <div class="form-group">
                            <label>設定値（数値）</label>
                            <input asp-for="@Model.SystemSettingValue" class="form-control" id="SystemSettingValueEdit" type="number" />
                        </div>
                        <div class="form-group">
                            <label>設定値（文字列）</label>
                            <input asp-for="@Model.SystemSettingStringValue" class="form-control" id="SystemSettingStringValueEdit" type="text" />
                        </div>
                        <div class="form-group">
                            <label>内容</label>
                            <input asp-for="@Model.SystemSettingTitle" class="form-control" id="SystemSettingTitleEdit" type="text" readonly />
                        </div>
                        <div class="form-group">
                            <label>詳細</label>
                            <input asp-for="@Model.SystemSettingDetail" class="form-control" id="SystemSettingDetailEdit" type="text" readonly />
                        </div>
                        <!--Modal Footer Start-->
                        <div class="modal-footer mt-5">
                                <button class="btn btn-success col" type="submit">保存</button>
                                <button class="btn btn-secondary col" type="button" onclick="CancelSubmit()">キャンセル</button>
                        </div>  <!--Modal Footer End-->
                    </div>
                </form>
            </div>             <!--Modal Body End-->
        </div>
    </div>
</div>
<!--Modal Body End-->
@*


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}*@